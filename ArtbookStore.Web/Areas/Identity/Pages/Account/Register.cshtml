@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<!-- This page is used for user registration. It contains a form with fields for email, password, and confirm password, along with validation messages. There is also a link to the login page for users who already have an account. -->
<div class="auth-wrapper">

    <h1 class="auth-title">Register</h1>

    <form method="post" class="auth-form">

        <div>
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="auth-input" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="auth-input" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Input.ConfirmPassword"></label>
            <input asp-for="Input.ConfirmPassword" class="auth-input" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="auth-button">
            Create account
        </button>

    </form>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <p class="auth-switch">
        Already have an account?
        <a asp-page="./Login">Log in</a>
    </p>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}