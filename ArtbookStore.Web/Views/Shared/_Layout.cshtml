<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ArtbookStore.Web</title>

    <script type="importmap"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Fanwood+Text:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ArtbookStore.Web.styles.css" asp-append-version="true" />
</head>
<body>

<header class="sf-header">
    <nav class="sf-nav container">

        <!-- Logo -->
        <a asp-controller="Home"
           asp-action="Index"
           class="sf-logo"
           aria-label="Sumi Foli Bookstore Home">

            <img src="~/images/logo.svg"
                 alt="Sumi Foli Bookstore"
                 class="sf-logo-img" />
        </a>

        <!-- Navigation -->
        <ul class="sf-menu">
            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-controller="Products" asp-action="Index">Shop</a></li>
            <li><a asp-controller="Home" asp-action="About">About</a></li>
            <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
            <!-- Mobile Login -->
            <li class="mobile-auth">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <form asp-area="Identity"
                        asp-page="/Account/Logout"
                        method="post">
                        <button type="submit" class="mobile-login-btn">
                            Logout
                        </button>
                    </form>
                }
                else
                {
                    <a asp-area="Identity"
                    asp-page="/Account/Login"
                    class="mobile-login-btn">
                        Login
                    </a>
                }
            </li>
        </ul>

        <!-- Hamburger (mobile) -->
        <button class="sf-hamburger"
                aria-label="Toggle menu"
                aria-expanded="false"
                onclick="toggleMenu()">
            <i class="bi bi-list"></i>
        </button>
        
        <!-- Right Icons -->
        <div class="sf-icons">

            <!-- User account icon -->
            @if (User.Identity?.IsAuthenticated == true)
            {
                if (User.IsInRole("Admin"))
                {
                    <a asp-controller="Admin"
                       asp-action="Index"
                       aria-label="User account">
                        <i class="bi bi-person"></i>
                    </a>
                }
                else
                {
                    <a asp-controller="Orders"
                       asp-action="Index"
                       aria-label="User account">
                        <i class="bi bi-person"></i>
                    </a>
                }
            }
            else
            {
                <a asp-area="Identity"
                   asp-page="/Account/Login"
                   aria-label="User account">
                    <i class="bi bi-person"></i>
                </a>
            }

            <!-- Cart (only for customers) -->
            @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Customer"))
            {
                @await Component.InvokeAsync("CartSummary")
            }

            <!-- Login / Logout -->
            <partial name="_LoginPartial" />

        </div>
    </nav>
</header>

<div class="container">

    <!-- Global feedback -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success mt-3">
            @TempData["Success"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger mt-3">
            @TempData["Error"]
        </div>
    }

    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="sf-footer">

    <div class="sf-footer-inner">

        <!-- Logo -->
        <div class="sf-footer-brand">
            <img src="~/images/logo.svg"
                 alt="Sumi Foli Bookstore"
                 class="sf-footer-logo" />
        </div>

        <!-- Middle with navlinsk in column 1 -->
        <nav class="sf-footer-nav">
            <a asp-controller="Home" asp-action="Index">Home</a>
            <a asp-controller="Products" asp-action="Index">Shop</a>
            <a asp-controller="Home" asp-action="About">About</a>
            <a asp-controller="Home" asp-action="Contact">Contact</a>
        </nav>

        <!-- Middle with navlink in column 1 -->
        <nav class="sf-footer-nav">
            <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
            <a asp-controller="Home" asp-action="Terms">Terms & Conditions</a>
            <a asp-controller="Home" asp-action="FAQ">FAQ</a>
        </nav>

        <!-- Newsletter with button -->
        <div class="sf-footer-newsletter">
            <h3>Newsletter</h3>
            <button class="sf-footer-btn">
                Subscribe
            </button>
        </div>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
