@model ArtbookStore.Web.Models.Order

@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container mt-4">
    <div class="card shadow p-4">

        <h2 class="text-success mb-3">Thank you for your order!</h2>

        <p><strong>Order Number:</strong> #@Model.Id</p>
        <p><strong>Status:</strong> @Model.Status</p>
        <p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")</p>

        <hr />

        <h4>Order Details</h4>

        <ul class="list-group">
            @foreach (var item in Model.OrderItems)
            {
                <li class="list-group-item d-flex justify-content-between">
                    <span>@item.Product?.Title (x @item.Quantity)</span>
                    <span>@((item.Quantity * item.UnitPrice).ToString("C"))</span>
                </li>
            }
        </ul>

        <div class="mt-4">
            <a asp-action="MyOrders" class="btn btn-primary">
                View My Orders
            </a>
            <a asp-controller="Products" asp-action="Index" class="btn btn-outline-secondary">
                Continue Shopping
            </a>
        </div>

    </div>
</div>
