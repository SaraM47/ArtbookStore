@model IEnumerable<ArtbookStore.Web.Models.Order>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Orders";
}

<h1 class="admin-title">Orders</h1>

<!-- If there are no orders, show a simple message -->
@if (Model == null || !Model.Any())
{
    <div class="admin-box">
        No orders found.
    </div>
}
else
{
    <div class="admin-table-wrapper">

        <table class="admin-table">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Customer</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <!-- ORDER ID which link to details -->
                    <td>
                        <a asp-action="Details"
                           asp-route-id="@order.Id"
                           class="order-link">
                            #@order.Id
                        </a>
                    </td>

                    <!-- Customer email -->
                    <td>@order.User?.Email</td>

                    <!-- Total in format to 2 decimals -->
                    <td>@order.TotalAmount.ToString("0.00")</td>

                    <!-- Status bagde (CSS class from status) -->
                    <td>
                        <span class="status-badge @order.Status.ToLower()">
                            @order.Status
                        </span>
                    </td>

                    <!-- Date -->
                    <td>@order.CreatedAt.ToString("yyyy-MM-dd")</td>

                    <!-- Actions -->
                    <td class="order-actions">

                        <!-- View details -->
                        <a asp-action="Details"
                           asp-route-id="@order.Id"
                           class="icon-btn"
                           aria-label="View order">
                            <i class="bi bi-eye"></i>
                        </a>

                        <!-- Mark as complete -->
                        @if (order.Status == "Processing")
                        {
                            <form asp-action="UpdateStatus"
                                  method="post"
                                  style="display:inline;">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@order.Id" />
                                <input type="hidden" name="status" value="Completed" />

                                <button type="submit"
                                        class="icon-btn"
                                        aria-label="Mark as completed">
                                    <i class="bi bi-check-lg"></i>
                                </button>
                            </form>
                        }

                     <!-- Archive order shows only when the order is Completed -->
                        @if (order.Status == "Completed")
                        {
                            <form asp-action="UpdateStatus"
                                  method="post"
                                  style="display:inline;">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@order.Id" />
                                <input type="hidden" name="status" value="Archived" />

                                <button type="submit"
                                        class="icon-btn"
                                        aria-label="Archive order">
                                    <i class="bi bi-archive"></i>
                                </button>
                            </form>
                        }

                    </td>
                </tr>
            }
            </tbody>
        </table>

    </div>
}
