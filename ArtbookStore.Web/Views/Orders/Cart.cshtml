@model ArtbookStore.Web.Models.Order

@{
    ViewData["Title"] = "Your Cart";
}

<h2>Your Cart</h2>

@if (Model == null || Model.OrderItems == null || !Model.OrderItems.Any())
{
    <div class="alert alert-info">
        Your cart is empty.
    </div>

    <a asp-controller="Products"
       asp-action="Index"
       class="btn btn-outline-primary">
        Browse Products
    </a>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th class="text-end">Price</th>
                <th>Quantity</th>
                <th class="text-end">Total</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.Product?.Title</td>

                <td class="text-end">
                    @item.UnitPrice.ToString("0.00")
                </td>

                <td>
                    <form asp-action="UpdateQuantity" method="post" class="d-flex gap-2 align-items-center">
                        @Html.AntiForgeryToken()

                        <input type="hidden" name="orderItemId" value="@item.Id" />

                        <input type="number"
                               name="quantity"
                               value="@item.Quantity"
                               min="1"
                               class="form-control form-control-sm"
                               style="width: 90px;" />

                        <button type="submit" class="btn btn-sm btn-primary">
                            Update
                        </button>
                    </form>
                </td>

                <td class="text-end">
                    @(item.Quantity * item.UnitPrice).ToString("0.00")
                </td>

                <td class="text-end">
                    <form asp-action="RemoveItem" method="post">
                        @Html.AntiForgeryToken()

                        <input type="hidden" name="orderItemId" value="@item.Id" />

                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Remove this item from your cart?');">
                            Remove
                        </button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <hr />

    <div class="d-flex justify-content-between align-items-center">
        <h4 class="m-0">Total: @Model.TotalAmount.ToString("0.00")</h4>

        <form asp-action="Checkout" method="post">
            @Html.AntiForgeryToken()

            <button type="submit" class="btn btn-success">
                Checkout
            </button>
        </form>
    </div>
}
