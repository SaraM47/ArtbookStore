@model ArtbookStore.Web.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h1>Product Details</h1>

<div>
    <h4>@Model.Title</h4>
    <hr />

    <dl class="row">

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category?.Name</dd>

        <dt class="col-sm-2">In Stock</dt>
        <dd class="col-sm-10">@Model.StockQuantity</dd>

        <dt class="col-sm-2">Created</dt>
        <dd class="col-sm-10">@Model.CreatedAt</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl"
                     alt="@Model.Title"
                     style="max-width:300px;" />
            }
            else
            {
                <span>No image available</span>
            }
        </dd>

    </dl>
</div>

<hr />

<!-- Add to cart section -->
@if (User.IsInRole("Customer"))
{
    if (Model.StockQuantity > 0)
    {
        <form asp-controller="Orders" asp-action="Create" method="post">
            <input type="hidden" name="productId" value="@Model.Id" />

            <div class="form-group mb-2">
                <label for="quantity">Quantity</label>
                <input type="number"
                       name="quantity"
                       class="form-control"
                       value="1"
                       min="1"
                       max="@Model.StockQuantity"
                       required />
            </div>

            <button type="submit" class="btn btn-primary">
                Add to Cart
            </button>
        </form>
    }
    else
    {
        <div class="alert alert-warning">
            Out of stock
        </div>
    }
}
else if (User.Identity != null && User.Identity.IsAuthenticated)
{
    <div class="alert alert-info">
        You are logged in as Admin and cannot place orders.
    </div>
}
else
{
    <a class="btn btn-outline-primary"
       asp-area="Identity"
       asp-page="/Account/Login">
        Login to purchase
    </a>
}

<hr />

<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
        <span> | </span>
    }

    <a asp-action="Index">Back to List</a>
</div>
